<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">
    <Button
        android:id="@+id/lifecyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life Cycle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="@id/basics"

        />
    <Button
        android:id="@+id/alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert Dialoge"
        app:layout_constraintStart_toStartOf="@id/sendmail"

        app:layout_constraintEnd_toEndOf="@id/sendmail"
        app:layout_constraintTop_toBottomOf="@id/sendmail"

        />

    <Button
        android:id="@+id/explict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explicit \n Intent"
        app:layout_constraintStart_toStartOf="@id/lifecyle"
        app:layout_constraintEnd_toEndOf="@id/lifecyle"
        app:layout_constraintTop_toBottomOf="@id/intentstittle"

        />
    <Button
        android:id="@+id/sendmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND MAIL"
        app:layout_constraintStart_toStartOf="@id/lifecyle"
        app:layout_constraintEnd_toEndOf="@id/lifecyle"
        app:layout_constraintTop_toBottomOf="@id/implict"
/>
    <Button
        android:id="@+id/implict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="implicit \n Intent"
        app:layout_constraintStart_toStartOf="@id/lifecyle"
        app:layout_constraintEnd_toEndOf="@id/lifecyle"
        app:layout_constraintTop_toBottomOf="@id/explict"

        />

    <TextView
        android:id="@+id/basics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Andoid Basics"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"/>
    <TextView
        android:id="@+id/intentstittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intents"
        android:textColor="@color/neongreen"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/lifecyle"
        app:layout_constraintStart_toStartOf="@id/lifecyle"
        app:layout_constraintEnd_toEndOf="@id/lifecyle"
        />

</androidx.constraintlayout.widget.ConstraintLayout>